<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <!--        <Button-->
<!--            android:id="@+id/resetButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="#CCE5FF"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:text="RESET" />-->
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureAllChildren="false"
        android:layout_gravity="top"
        tools:layout_editor_absoluteX="-10dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="810dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"></TableLayout>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:onClick="onClickReset"
                android:text="RESET"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/COMPLETE"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="COMPLETE"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />


        <TableLayout
            android:id="@+id/numberpad"
            android:layout_width="330dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/memoText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Input Number"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum1"
                    android:text="1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum2"
                    android:text="2"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum3"
                    android:text="3"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum4"
                    android:text="4"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum5"
                    android:text="5"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum6"
                    android:text="6"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum7"
                    android:text="7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum8"
                    android:text="8"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickNum9"
                    android:text="9"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Button"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickCancel"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="onClickDelete"
                    android:text="DEL" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/memo"
            android:layout_width="330dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/memoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="MEMO"
                    android:textAlignment="center"
                    android:textColor="#5663B9"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ToggleButton
                    android:id="@+id/memoNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum1"
                    android:textOff="1"
                    android:textOn="1"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum2"
                    android:textOff="2"
                    android:textOn="2"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum3"
                    android:textOff="3"
                    android:textOn="3"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ToggleButton
                    android:id="@+id/memoNum4"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum4"
                    android:textOff="4"
                    android:textOn="4"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum5"
                    android:textOff="5"
                    android:textOn="5"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum6"
                    android:textOff="6"
                    android:textOn="6"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ToggleButton
                    android:id="@+id/memoNum7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum7"
                    android:textOff="7"
                    android:textOn="7"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum8"
                    android:textOff="8"
                    android:textOn="8"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/memoNum9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="memoOnClickNum9"
                    android:textOff="9"
                    android:textOn="9"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <Button
                    android:id="@+id/memoCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:onClick="memoOnClickCancel"
                    android:text="CANCEL"
                    android:textColor="#5663B9" />

                <Button
                    android:id="@+id/memoDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:onClick="memoOnClickDelete"
                    android:text="Delete"
                    android:textColor="#5663B9" />

                <Button
                    android:id="@+id/memoOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:onClick="memoOnClickOK"
                    android:text="OK"

                    android:textColor="#5663B9" />
            </TableRow>
        </TableLayout>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>